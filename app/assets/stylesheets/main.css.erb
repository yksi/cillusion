body {
  margin: 0;
  background-position: center;
}

#imagee {
  max-width: 200px;
}

textarea {
  resize: vertical;
}

.article-thumb {
  min-height: 209px;
  max-height: 209px;
  -webkit-box-shadow: 5px 3px 6px 0px rgba(50, 50, 50, 0.58);
  -moz-box-shadow:    5px 3px 6px 0px rgba(50, 50, 50, 0.58);
  box-shadow:         5px 3px 6px 0px rgba(50, 50, 50, 0.58);
}

.article-thumb-image {
  min-height: 150px;
  min-width: auto;
  max-height: 150px;
}

.about-me {
  border: 4px #AAA solid;
  padding: 15px;
}

.user_info {
  background-color: #F2F3F4;
}

.change-avatar {
  margin-top: -20px;
}

.avatar:hover .change-avatar{
  visibility: visible;
}

figure.photo {
  position: relative;
}

figure.photo .btn-pick-photo {
  display: none;
  position: absolute;
  bottom: 10px;
  right: 0px;
  left: 0px;
  padding: 4px 9px;
  background: #C5CBE1;
  color: white;
  font-weight: bold;
  opacity: 0.9;
}

figure.photo .btn-pick-photo:hover {
  background: #b4bcd8;
  text-decoration: underline;
}

figure.photo:hover .btn-pick-photo {
  display: block;
}

.rounded-btn {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  border: 2px #949145 solid;
  text-align: center;
  transition: background-color 0.5s;
  padding-top: 9px;
  color: #949154;
}

.rounded-btn:hover{
  background-color: #949145;
  color: #664F40;
}

.pomp {
  height:40px;
  padding-top: 0;
}

@font-face
{
  font-family: logo;
  src: url('<%= asset_path "font-logo.woff" %>');
}

.navbar-brand {
  font-family: logo;
  color: #949145;
}

#editor {
  width:120%;
}

.new_messages {
  display: inline;
  min-width: 10px;
  padding: 3px 7px;
  font-size: 12px;
  font-weight: bold;
  color: #FFF;
  line-height: 1;
  vertical-align: baseline;
  white-space: nowrap;
  text-align: center;
  background-color: #e7e7e7;
  border-radius: 10px;
  position: absolute;
  background-color: red;
  top: 1px;
}

.sign_up {
  margin-top: 15px;
  font-size: 25px;
}

.unread {
  background-color: #f2f2f2;
}

.new_alert {
  display: inline;
  width: 5px;
  height: 5px;
  padding: 10px 10px;
  font-size: 12px;
  line-height: 1;
  position: relative;
  top: -10px;
  white-space: nowrap;
  text-align: center;
  border-radius: 50%;
  background-color: #3265D3;
}