body {
  margin: 0;
  background-position: center;
  background-image: url("<%= image_path '1.png' %>")
}

#imagee {
  max-width: 200px;
}

textarea {
  resize: vertical;
}

.article-thumb {
  min-height: 209px;
  max-height: 209px;
  -webkit-box-shadow: 5px 3px 6px 0px rgba(50, 50, 50, 0.58);
  -moz-box-shadow:    5px 3px 6px 0px rgba(50, 50, 50, 0.58);
  box-shadow:         5px 3px 6px 0px rgba(50, 50, 50, 0.58);
}

.article-thumb-image {
  min-height: 150px;
  min-width: auto;
  max-height: 150px;
}

.about-me {
  border: 4px #AAA solid;
  padding: 15px;
}

.user_info {
  background-color: #F2F3F4;
}

.change-avatar {
  margin-top: -20px;
  /*visibility: hidden;*/
}

.avatar:hover .change-avatar{
  visibility: visible;
}