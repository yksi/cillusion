%h2 Change your password
.row
  .col-md-6.col-md-offset-3    
    = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
      = devise_error_messages!
      = f.hidden_field :reset_password_token
        = f.password_field :password, :autofocus => true, class: 'form_control', placeholder: 'New password'
        = f.password_field :password_confirmation, class: 'form_control', placeholder: 'Confirm new password'
      %div= f.submit "Change my password"