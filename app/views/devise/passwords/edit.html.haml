%h2 Change your password
.row
  .col-md-6.col-md-offset-3    
    = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
      = f.hidden_field :reset_password_token
      = f.password_field :password, :autofocus => true, class: 'form-control', placeholder: 'New password'
      = f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm new password'
      %br
      .text-right= f.submit "Change my password", class: 'btn btn-success'