.col-md-6.col-md-offset-3
  %h2.text-center Sign in
  = devise_error_messages!
  .well
    = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      .text-right
        = link_to user_omniauth_authorize_path('facebook'), class: 'btn btn-primary btn-sm' do
          %b
            Login with facebook&nbsp;
            %i.fa.fa-facebook.fa-lg
      %div
        = f.label :email
        %br/
        = f.email_field :email, :autofocus => true, class: 'form-control'
      %div
        = f.label :password
        %br/
        = f.password_field :password, class: 'form-control'
      - if devise_mapping.rememberable?
        %div
          = f.check_box :remember_me
          = f.label :remember_me
          %br
          %b.text-muted.pull-right
            Do not have a profile?
            = link_to "Sign up", new_user_registration_path
          %div= f.submit "Sign in", class: 'btn btn-success', "data-loading-text" => "Loading..."
