- content_for :title, @user.fullname
.container
  %div
    %p
      %h1= "#{@user.fullname}"
      =image_tag @user.avatar.url(:thumb), align: "left", hspace: "20", vspace: "20"
      %br
      Age: #{@user.age}
      %br
      Hometown: #{@user.hometown}
      %br
      Registered: #{@user.created_at.strftime("%d %B %Y")}   
      %br
      Created articles: #{@user.user_articles.count}
      %br
      -if @user==current_user
        =link_to "Edit profile", edit_user_registration_path
  %div{style: "margin-top: 320"}
    Articles:
    %br
    -@articles.each do |a|
      =link_to a do
        #{a.theme} | #{a.created_at.strftime("%d %B %Y")}
      %br
  