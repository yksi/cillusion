- content_for :title, @user.fullname
- @ID =  @user.id
.container
  .col-md-6
    %h1= "#{@user.fullname}"
    %br
    - if @user.age
      Age: #{@user.age}
    %br
    - if @user.hometown
      Hometown: #{@user.hometown}
    %br
    Registered: #{@user.created_at.strftime("%d %B %Y")}
    %br
    Created articles: #{@user.user_articles.count}
    %br
    -if @user==current_user
      =link_to "Edit profile", edit_user_registration_path
  .col-md-6
    =image_tag @user.avatar.url(:thumb), align: "top", hspace: "20", vspace: "20"
  %h1 Articles:
  %br
  - @articles.each do |article|
    .col-sm-1.col-md-2
      .thumbnail
        = link_to article do
          = image_tag article.photo.url, class: "img-rounded"
          .caption
            %h4= "#{article.theme}"
