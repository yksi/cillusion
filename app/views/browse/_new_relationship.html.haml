= content_tag_for(:li, logable, user, class: 'animated rotateInUpRight' ) do
  .timeline-badge.danger
    %i.fa.fa-lg.fa-users
  .timeline-panel
    .timeline-body
      %h3{style: 'margin-top:0px;'}= t('New_follower_event')
      .pander
        = link_to logable.follower do
          = image_tag logable.follower.avatar.small.url, class: 'img-circle'
          = logable.follower.fullname
        = t('followed_you')
        %em.text-muted= "#{time_ago_in_words(logable.created_at)} #{t('ago')}."