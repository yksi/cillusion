= form_for @article do |f|
  .col-xs-12.col-sm-6.col-md-8.animated.bounceInLeft
    -if @article.errors.any?
      .panel.panel-danger
        .panel-heading
          Errors
        .panel-body
          -@article.errors.full_messages.each do |ue|
            %i.fa.fa-warning= "#{ue}"
    .panel.panel-warning
      .panel-heading= f.text_field :theme, placeholder: "Theme...", class: "form-control article-theme", style: "width: 100%;"
      .panel-body= f.cktext_area :content, :id => 'editor'
    %br
  .col-xs-6.col-md-4.animated.bounceInRight
    - if !current_page?(new_article_path)
      = link_to @article, method: :delete, class: "btn btn-danger btn-sm" do
        %i.fa.fa-times= " Remove"
    = button_tag(type: "submit", class: "btn btn-success btn-sm article-submit", disabled: !@can ) do
      %i.fa.fa-check= " Save"
    %hr
    = label_tag "Category:"
    = f.select :category, @category, class: "styled-select"
    %br= label_tag "Photo:"
    = f.file_field :photo, id: "file-input"
    #imagee= image_tag @article.photo.url
