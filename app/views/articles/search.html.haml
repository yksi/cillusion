- content_for :title, "#{@articles.count} articles found"
.form-inline.page-header
  = form_tag articles_search_path, method: 'get', class: 'navbar-search pull-left' do
    = text_field_tag :search, params[:search], class: "form-control", placeholder: "Search article..."
    = button_tag(type: 'submit', class: "btn btn-primary btn-xs") do
      %i.fa.fa-search.fa.lg.fa-inverse &nbsp;Search
%br
- if @articles.count > 0
  %ul.media-list
    - @articles.each do |a|
      %li.well.animated.bounceInUp
        = link_to a do
          = image_tag a.photo.url(:thumb), align: "left", class: "img-circle"
          %h4= "#{a.theme}"
        %em.text-muted= "#{strip_tags(a.content)[0..200]} ...."
        %em.text-primary.text-right= link_to "#{a.user.fullname}", a.user
        %em.text-right= "at #{a.return_created_at_as_nice_string}"
    %br
- else
  %h5.text-muted= "No articles found..."
  = link_to "Create article #{params[:search]}", new_article_path(theme: params[:search])



