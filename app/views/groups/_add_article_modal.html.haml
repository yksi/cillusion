#add_article_to_group.modal
  .modal-dialog
    .modal-content
      .modal-header
        Add articles to group
      .modal-body
        .row
          - @articles.each do |article|
            - if article.group != @group
              .col-md-2
                = link_to add_article_to_group_path(article: article) do
                  = image_tag article.photo.small.url
                  %h5= article.theme
              - @list = @list + 1
          - if @list == 0
            %h3.text-muted You have not any articles, which you can add to this gruop, maybe they are here