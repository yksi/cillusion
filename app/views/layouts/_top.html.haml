.navbar.navbar-default.navbar-fixed-top
  .animated.fadeIn
    .navbar-header
      - if user_signed_in?
        - @main_path = browse_timeline_path
      - else
        - @main_path = root_path
      %a.navbar-brand{ href: root_path }
        = image_tag "logo-toolbar.png", height: '48px'
    .container-fluid
      %button.navbar-toggle{'data-toggle' => 'collapse', 'data-target' => '.NAVCOl'}
        %i.fa.fa-bars
      .collapse.navbar-collapse.NAVCOl
        .nav.navbar-left.navbar-nav
          - if user_signed_in?
            %li.nav-btn{"data-toggle" => "tooltip", "data-placement" => "bottom", title: "Browse website"}
              = link_to browse_index_path do
                .rounded-btn.browse-btn.animated.bounceInDown
                  %i.fa.fa-book.fa-2x
            %li.nav-btn{"data-toggle" => "tooltip", "data-placement" => "bottom", title: "News timeline"}
              = link_to browse_timeline_path do
                .rounded-btn.timeline-btn.animated.bounceInDown
                  %i.fa.fa-clock-o.fa-2x
            %li.headerDivider
            %li.nav-btn{"data-toggle" => "tooltip", "data-placement" => "bottom", title: "Messages"}
              =link_to messages_path do
                .rounded-btn.messages-btn.animated.bounceInDown
                  %i.fa.fa-envelope.fa-2x
                  - @count = 0
                  - current_user.recieved_messages.each do |m|
                    - if m.read == false
                      - @count += 1
                  - if @count > 0
                    #span.new_messages= @count
            %li.nav-btn{"data-toggle" => "tooltip", "data-placement" => "bottom", title: "Groups"}
              = link_to groups_path do
                .rounded-btn.groups-btn.animated.bounceInDown
                  %i.fa.fa-th-large.fa-2x
            .pull-right
              = form_tag articles_search_path, method: 'get', class: 'navbar-search pull-left ', style: "margin-top:20px;" do
                = text_field_tag :search, params[:search], class: "form-control", placeholder: "Search article..."
        .nav.navbar-right.navbar-nav.animated.bounceInRight
          -if user_signed_in?
            %li.nav-btn{"data-toggle" => "tooltip", "data-placement" => "bottom", title: "Create new article"}
              = link_to new_article_path do
                .rounded-btn
                  %i.fa.fa-plus.text.fa-2x
            %li.dropdown.nav-btn
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                = image_tag current_user.avatar.small.url, class: 'img-circle', width: '48px'
                = current_user.first_name
                %b.caret
              %ul.dropdown-menu
                %li
                  = link_to current_user do
                    %i.fa.fa-home= " My Account"
                %li
                  = link_to edit_user_registration_path(current_user) do
                    %i.fa.fa-gear= " Account settings"
                %li
                  = link_to articles_path do
                    %i.fa.fa-calendar= " My Calendar"
                %li
                  = link_to destroy_user_session_path, method: :delete do
                    %i.fa.fa-times= " Sign out"
          -else
            %li
              .sign_up
                %a.sign_up{href: "#", "data-target" => "#modal-login", "data-toggle" => "modal"} Sign up
                = link_to user_omniauth_authorize_path('facebook'), class: 'btn btn-primary btn-sm' do
                  %i.fa.fa-facebook.ga-lg
- if !user_signed_in?
  = render "layouts/login_register_frame"