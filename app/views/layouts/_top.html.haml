.navbar.navbar-inverse.navbar-fixed-top
  .container-fluid
    .navbar-header
      - if user_signed_in?
        - @main_path = browse_timeline_path
      - else
        - @main_path = root_path
      = link_to @main_path, class: "navbar-brand" do
        CILLUSION
    .collapse.navbar-collapse
      - if user_signed_in?
        .navbar-form.navbar-left
          .form-group#search_form
            = form_tag articles_search_path, method: 'get', class: 'navbar-search pull-left' do
              %i.fa.fa-search.fa-inverse.fa-lg
              = text_field_tag :search, params[:search], class: "form-control", placeholder: "Search article..."
      .nav.navbar-center.navbar-nav
        - if user_signed_in?
          %li
            = link_to browse_index_path do
              %i.fa.fa-inverse.fa-book.fa-lg= " Browse"
          %li
            = link_to browse_timeline_path do
              %i.fa.fa-inverse.fa-lg.fa-clock-o= " News"
          %li
            =link_to messages_path do
              %i.fa.fa-envelope.fa-lg.fa-inverse=  " Messages"
      .nav.navbar-right.navbar-nav
        -if user_signed_in?
          %li
            = link_to new_article_path do
              %i.fa.fa-plus.fa-lg.text= " New Article"
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              #{current_user.fullname}
              %b.caret
            %ul.dropdown-menu
              %li
                = link_to current_user do
                  %i.fa.fa-inverse.fa-home= " My Account"
              %li
                = link_to edit_user_registration_path(current_user) do
                  %i.fa.fa-inverse.fa-gear= " Account settings"
              %li
                = link_to articles_path do
                  %i.fa.fa-inverse.fa-calendar= " My Calendar"
              %li
                = link_to destroy_user_session_path, method: :delete do
                  %i.fa.fa-inverse.fa-times= " Sign out"
        -else
          %li
            %a{href: "#", "data-target" => "#modal-login", "data-toggle" => "modal"} Sign up
= render "layouts/login_register_frame"
